{
  "name": "epic-mail",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "migration": "babel-node ./src/model/migration.js --env",
    "test1": "npm run migrations && cross-env NODE_ENV=test nyc --reporter=text --reporter=html mocha --recursive src/tests/version1/ --timeout 25000 --exit",
    "test": "cross-env NODE_ENV=test nyc --reporter=text --reporter=html mocha src/tests/v1/auth.js src/tests/v1/messages.js --timeout 25000 --exit",
    "dev": "nodemon --exec babel-node ./src/index.js",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel ./src --out-dir ./build",
    "build": "npm run clean && npm run build-babel",
    "start": "npm run build && node ./build/index.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "tables-setup-heroku": "heroku pg:psql postgresql-globular-23501 --app epic-mail-app < ./src/model/dbscripts/heroku.sql"

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/otaigbe/Epic-Mail.git"
  },
  "author": "",
